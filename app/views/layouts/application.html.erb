<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

  <nav>
    <ul>
      <li><%= link_to "New post", new_article_path %></li>
    </ul>
  </nav>
  <% [:notice, :error].each do |flashtype| %>
    <div class='<%= flashtype %>'>
      <%= flash[flashtype] %>
    </div>
  <% end %>
  
  <div id='content'>
    <%= yield %>
  </div>

</body>
</html>
